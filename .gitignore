# Laravel .gitignore - organized and commented
# Keep sensitive, generated and local-only files out of the repo.
# Note: keep .env.example (explicitly allowed) so sample env stays versioned.

# -----------------------------------------------------------------------------
# Environment & credentials
# -----------------------------------------------------------------------------
.env
.env.backup
!.env.example

# Local database dumps / exports (added per request)
*.sql
*.sql.gz
*.sql.bak

# -----------------------------------------------------------------------------
# Dependency directories
# -----------------------------------------------------------------------------
# /vendor/
/node_modules/

# Composer PHAR (local executable)
composer.phar

# -----------------------------------------------------------------------------
# Laravel storage & runtime (generated / writable files)
# -----------------------------------------------------------------------------
/storage/*.key          # keys that may be generated locally
/storage/framework/
 /storage/framework/cache/*
 /storage/framework/sessions/*
 /storage/framework/views/*
/storage/logs/
/storage/tmp
/storage/*.log

# Public generated symlink / hot reload files
/public/storage
/public/hot

# bootstrap cache (generated by artisan)
bootstrap/cache/*.php
bootstrap/cache/.gitignore

# -----------------------------------------------------------------------------
# Build / asset tool outputs & logs
# -----------------------------------------------------------------------------
npm-debug.log*
yarn-error.log
webpack.mix.js.map
mix-manifest.json.map
/public/mix-manifest.json.map

# -----------------------------------------------------------------------------
# Docker / local container files
# -----------------------------------------------------------------------------
docker-compose.override.yml
docker-local/
.ddev/

# -----------------------------------------------------------------------------
# Homestead / Vagrant
# -----------------------------------------------------------------------------
Homestead.json
Homestead.yaml
/.vagrant/

# -----------------------------------------------------------------------------
# IDEs & editors
# -----------------------------------------------------------------------------
.idea/
.vscode/
*.sublime-workspace
*.sublime-project

# -----------------------------------------------------------------------------
# OS files & misc
# -----------------------------------------------------------------------------
.DS_Store
Thumbs.db
error_log

# -----------------------------------------------------------------------------
# PHPUnit / test artifacts
# -----------------------------------------------------------------------------
.phpunit.result.cache

# -----------------------------------------------------------------------------
# Public/.well-known - often used for ACME challenge files; ignore unless you purposely track them
# -----------------------------------------------------------------------------
/public/.well-known

# -----------------------------------------------------------------------------
# Exceptions / notes
# -----------------------------------------------------------------------------
# If you want to track certain generated files (e.g. mix-manifest.json or public assets)
# remove them from this file. Keep secrets (env, keys, DB dumps) out of source control.